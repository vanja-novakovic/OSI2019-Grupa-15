<Window x:Class="Eve.Categories.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eve.Categories"
        mc:Ignorable="d"
        Title="EditWindow" Height="350" Width="450">

    <Border Background="#1f262a" CornerRadius="10">
        <StackPanel Margin="30">
            <TextBlock Text="Edit Category" Foreground="#fff" HorizontalAlignment="Center" FontSize="20"/>
            <Separator Margin="0 5 0 5"></Separator>
            <TextBlock Text="Name:" Foreground="#fff"/>
            <TextBox x:Name="NameBox" FontSize="16" Foreground="#eee" Background="#1f262a" Margin="0 8 0 0" Height="29"/>
            <Button x:Name="SaveButton" Click="SaveButton_Click" Content="Save" FontSize="16" 
                    Foreground="#fff" Background="#1f262a" Margin="60 20 " Height="33" />
            <TextBlock Text="or" Foreground="#fff" HorizontalAlignment="Center" FontSize="14" />
            <Button x:Name="CancelButton" Click="CancelButton_Click" Content="Cancel" FontSize="16"
                        Foreground="#fff" Background="#1f262a" Margin="60 20 " Height="33" />
        </StackPanel>
    </Border>
</Window>
